@model IEnumerable<UBooks.Models.Book>

@{
    ViewBag.Title = "Books for " + (ViewBag.IsForSell ? "Sell" : "Purchase");
}

<h2>@ViewBag.Title</h2>

<table id="books" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>@(ViewBag.IsForSell ? "Seller" : "Buyer")</th>
            <th>Advertisement Date</th>
            <th>Is Expired Advertisement</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var book in Model)
    {
        <tr>
            <td>@Html.ActionLink(book.Title, "Details", new {id = book.Id})</td>
            <td>@book.Author</td>
            <td>@book.AdvertisementOwner.UserName</td>
            <td>@book.AddedDate</td>
            <td>@(book.ExpiredAdvertisement ? "Yes" : "No")</td>
        </tr>
    }
    </tbody>
</table>