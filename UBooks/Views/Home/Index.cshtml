@{
    ViewBag.Title = "Home Page";
}

<h1>UBooks</h1>

<div class="row">
    <div class="col-md-6">
        <h2>Have an old book ?</h2>
        <p>Click the button below to add a book for sell.</p>
        @Html.ActionLink("Sell book", "SellBook", "Books", null, new { @class = "btn btn-default" })
    </div>
    <div class="col-md-6">
        <h2>Can't find an old book ?</h2>
        <p>Click the button below to ask for a specific book you need.</p>
        @Html.ActionLink("Buy book", "BuyBook", "Books", null, new { @class = "btn btn-default" })
    </div>
</div>